<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    android:id="@+id/fragment_informasi">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_detail_informasigeneral"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_20dp"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_title_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/constraint_detail_informasigeneral"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Nama"
                android:textSize="12sp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_value_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_title_nama"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Maryono"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_title_dusun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_value_nama"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Dusun"
                android:textSize="12sp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_value_dusun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_title_dusun"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Mojowarno"
                android:textSize="16sp"
                android:textStyle="bold"
                />



            <LinearLayout
                android:id="@+id/linearlayout_detail_informasigeneral_rtrw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/margin_12dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_value_dusun"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearlayout_detail_informasigeneral_rt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                <!--RT-->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textview_detail_informasigeneral_title_rt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RT"
                        android:textSize="12sp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textview_detail_informasigeneral_value_rt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="08"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_8dp"/>

                <LinearLayout
                    android:id="@+id/linearlayout_detail_informasigeneral_rw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/margin_8dp"
                    >

                    <!--RW-->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textview_detail_informasigeneral_title_rw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="RW"
                        android:textSize="12sp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textview_detail_informasigeneral_value_rw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="10"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </LinearLayout>

            <!--Status Rumah-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_title_statusrumah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/linearlayout_detail_informasigeneral_rtrw"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Status Rumah"
                android:textSize="12sp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_value_statusrumah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_title_statusrumah"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Milik Sendiri"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <!--Status Tanah Garapan-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_title_statustanahgarapan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_value_statusrumah"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Status Tanah Garapan"
                android:textSize="12sp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_value_statustanahgarapan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_title_statustanahgarapan"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Milik Sendiri"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <!--Jumlah Tanah Garapan-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_title_jumlahtanahgarapan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_value_statustanahgarapan"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Jumlah Tanah Garapan"
                android:textSize="12sp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_value_jumlahtanahgarapan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_title_jumlahtanahgarapan"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="1"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <!--Luas Tanah Garapan-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_title_luastanahgarapan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_value_jumlahtanahgarapan"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Luas Tanah Garapan"
                android:textSize="12sp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_value_luastanahgarapan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_title_luastanahgarapan"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text=">2000"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <!--Status Kemiskinan-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_title_statuskemiskinan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_value_luastanahgarapan"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Status Kemiskinan"
                android:textSize="12sp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_value_statuskemiskinan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_title_statuskemiskinan"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Tidak"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <!--Jenis Fasilitas Air Bersih-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_title_jenisfasairbersih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_value_statuskemiskinan"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Jenis Fasilitas Air Bersih"
                android:textSize="12sp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_value_jenisfasairbersih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_title_jenisfasairbersih"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Sumur Gali (Unit)"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <!--Jenis Sanitasi-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_title_jenissanitasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_value_jenisfasairbersih"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Jenis Sanitasi"
                android:textSize="12sp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_value_jenissanitasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_title_jenissanitasi"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Sumur Resapan Air Rumah Tangga"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <!--Konsumsi Air Minum-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_title_konsumsiairminum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_value_jenissanitasi"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Konsumsi Air Minum"
                android:textSize="12sp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_detail_informasigeneral_value_konsumsiairminum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textview_detail_informasigeneral_title_konsumsiairminum"
                app:layout_constraintStart_toStartOf="@id/constraint_detail_informasigeneral"
                android:text="Air Kemasan"
                android:textSize="16sp"
                android:textStyle="bold"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>