<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

         <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_add_detail_anggota_keluarga"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="@dimen/margin_20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_add_detail_anggota_keluarga_simpan"
          />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_add_detail_anggota_keluarga_simpan"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Simpan"
        android:background="@drawable/touch_effect_button_tambah"
        android:textStyle="bold"
        android:textColor="#ffffff"
        />


</androidx.constraintlayout.widget.ConstraintLayout>