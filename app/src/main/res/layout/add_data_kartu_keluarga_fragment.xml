<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_add_data_kartukeluarga">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_next_add_data">
    <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_add_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- No KK -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_add_data_nokk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No KK"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toTopOf="@id/constraint_add_data" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edittext_add_data_nokk"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="eg:289831287631873"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_add_data"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/textview_add_data_nokk" />

                <!-- Nama -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_add_data_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Nama"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/edittext_add_data_nokk" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edittext_add_data_nama"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Johndoe"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_add_data"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/textview_add_data_nama" />

                <!-- Alamat -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_add_data_alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Alamat"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/edittext_add_data_nama" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edittext_add_data_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="0"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_add_data"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/textview_add_data_alamat" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_add_data_dusunrtrw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_add_data"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/edittext_add_data_alamat">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_add_data_dusunrtrw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="186dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_add_data_dusun"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margin_8dp"
                        app:layout_constraintStart_toStartOf="@id/constraint_add_data_dusunrtrw"
                        app:layout_constraintTop_toTopOf="@id/constraint_add_data_dusunrtrw"
                        app:layout_constraintBottom_toBottomOf="@id/constraint_add_data_dusunrtrw"
                        app:layout_constraintEnd_toStartOf="@id/guideline_add_data_dusunrtrw"
                        >

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textview_add_data_dusun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="@id/constraint_add_data_dusun"
                            app:layout_constraintTop_toTopOf="@id/constraint_add_data_dusun"
                            android:text="Dusun"
                            android:textSize="12sp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edittext_add_data_dusun"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            app:layout_constraintStart_toStartOf="@id/constraint_add_data_dusun"
                            app:layout_constraintEnd_toEndOf="@id/constraint_add_data_dusun"
                            app:layout_constraintTop_toBottomOf="@id/textview_add_data_dusun"
                            app:layout_constraintBottom_toBottomOf="@id/constraint_add_data_dusun"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/custom_edittext"
                            android:hint="Gudo"
                            android:textSize="12sp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_add_data_rtrw"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="@id/constraint_add_data_dusunrtrw"
                        app:layout_constraintStart_toEndOf="@id/guideline_add_data_dusunrtrw"
                        app:layout_constraintBottom_toBottomOf="@id/constraint_add_data_dusunrtrw"
                        app:layout_constraintEnd_toEndOf="@id/constraint_add_data_dusunrtrw"
                        android:layout_marginStart="8dp">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline_add_data_rtrw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.50151056"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraint_add_data_rt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toStartOf="@id/constraint_add_data_rtrw"
                            app:layout_constraintTop_toTopOf="@id/constraint_add_data_rtrw"
                            app:layout_constraintBottom_toBottomOf="@id/constraint_add_data_rtrw"
                            app:layout_constraintEnd_toStartOf="@id/guideline_add_data_rtrw">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/textview_add_data_rt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="@id/constraint_add_data_rt"
                                app:layout_constraintTop_toTopOf="@id/constraint_add_data_rt"
                                android:text="RT"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edittext_add_data_rt"
                                android:layout_width="0dp"
                                android:layout_height="52dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintTop_toBottomOf="@id/textview_add_data_rt"
                                app:layout_constraintStart_toStartOf="@id/constraint_add_data_rt"
                                app:layout_constraintEnd_toEndOf="@id/constraint_add_data_rt"
                                app:layout_constraintBottom_toBottomOf="@id/constraint_add_data_rt"
                                android:background="@drawable/custom_edittext"
                                android:hint="08"
                                android:textSize="12sp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraint_add_data_rw"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toEndOf="@id/guideline_add_data_rtrw"
                            app:layout_constraintTop_toTopOf="@id/constraint_add_data_rtrw"
                            app:layout_constraintBottom_toBottomOf="@id/constraint_add_data_rtrw"
                            app:layout_constraintEnd_toEndOf="@id/constraint_add_data_rtrw"
                            >

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/textview_add_data_rw"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="@id/constraint_add_data_rw"
                                app:layout_constraintTop_toTopOf="@id/constraint_add_data_rw"
                                android:text="RW"
                                android:textSize="12sp" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edittext_add_data_rw"
                                android:layout_width="0dp"
                                android:layout_height="52dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintStart_toStartOf="@id/constraint_add_data_rw"
                                app:layout_constraintEnd_toEndOf="@id/constraint_add_data_rw"
                                app:layout_constraintTop_toBottomOf="@id/textview_add_data_rw"
                                app:layout_constraintBottom_toBottomOf="@id/constraint_add_data_rw"
                                android:background="@drawable/custom_edittext"
                                android:hint="10"
                                android:textSize="12sp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- RT -->

                <!-- Desa -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_add_data_desa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Desa"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/constraint_add_data_dusunrtrw" />

                <Spinner
                    android:id="@+id/spinner_add_data_desa"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_add_data"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/textview_add_data_desa"

                    />

                <!-- Status Rumah -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_add_data_statusrumah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Status Rumah"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/spinner_add_data_desa" />

                <Spinner
                    android:id="@+id/spinner_add_data_statusrumah"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_add_data"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/textview_add_data_statusrumah"

                    />
                <!-- Status Tanah Garapan -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_add_data_statustanahgarapan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Status Tanah Garapan"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/spinner_add_data_statusrumah" />

                <Spinner
                    android:id="@+id/spinner_add_data_statustanahgarapan"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_add_data"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/textview_add_data_statustanahgarapan"

                    />

                <!-- Jumlah Tanah Garapan -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_add_data_jumlahtanahgarapan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Jumlah Tanah Garapan"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/spinner_add_data_statustanahgarapan" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edittext_add_data_jumlahtanahgarapan"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="0"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_add_data"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/textview_add_data_jumlahtanahgarapan" />

                <!-- Luas Tanah Garapan -->

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_add_data_luastanahgarapan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Luas Tanah Garapan"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/edittext_add_data_jumlahtanahgarapan" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edittext_add_data_luastanahgarapan"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="0"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_add_data"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/textview_add_data_luastanahgarapan" />

                <!-- Status Kemiskinan -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_add_data_statuskemiskinan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Status Kemiskinan"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/edittext_add_data_luastanahgarapan" />

                <RadioGroup
                    android:id="@+id/radiogroup_add_data_statuskemiskinan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textview_add_data_statuskemiskinan"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintEnd_toEndOf="@id/constraint_add_data"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/radiobutton_add_data_statuskemiskinan_ya"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:checked="true"
                        android:text="Ya"
                        android:background="@drawable/custom_edittext"
                        android:buttonTint="@color/colorPrimary"
                        />

                    <RadioButton
                        android:id="@+id/radiobutton_add_data_statuskemiskinan_tidak"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:text="Tidak"
                        android:background="@drawable/custom_edittext"
                        android:buttonTint="@color/colorPrimary"
                        />

                </RadioGroup>



                <!-- Jenis Fasilitas Air Bersih -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_add_data_jenisfasilitasair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Jenis Fasilitas Air Bersih"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/radiogroup_add_data_statuskemiskinan" />

                <Spinner
                    android:id="@+id/spinner_add_data_jenisfasilitasair"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_add_data"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/textview_add_data_jenisfasilitasair"

                    />


                <!-- Jenis Sanitasi -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_add_data_jenissanitasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Status Tanah Garapan"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/spinner_add_data_jenisfasilitasair" />

                <Spinner
                    android:id="@+id/spinner_add_data_jenissanitasi"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_add_data"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/textview_add_data_jenissanitasi"

                    />


                <!-- Konsumsi Air Minum -->

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_add_data_konsumsiairminum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Status Tanah Garapan"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/spinner_add_data_jenissanitasi" />

                <Spinner
                    android:id="@+id/spinner_add_data_konsumsiairminum"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_add_data"
                    app:layout_constraintStart_toStartOf="@id/constraint_add_data"
                    app:layout_constraintTop_toBottomOf="@id/textview_add_data_konsumsiairminum"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/button_next_add_data"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Selanjutnya"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/touch_effect_button_tambah"/>
</androidx.constraintlayout.widget.ConstraintLayout>

